{
	"name": "StandardizeCauseOfDeathDF",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "ADLS_CauseOfDeath_CSV",
						"type": "DatasetReference"
					},
					"name": "CauseOfDeath"
				}
			],
			"sinks": [
				{
					"name": "sink1"
				}
			],
			"transformations": [
				{
					"name": "StandardizeValues"
				},
				{
					"name": "FilterDiabetesRelated"
				},
				{
					"name": "RenameColumns"
				}
			],
			"scriptLines": [
				"source(output(",
				"          {Age group} as string,",
				"          {Diagnosis group} as string,",
				"          Country as string,",
				"          Sex as string,",
				"          Year as short,",
				"          {[DEATH01] Causes of death (full list)} as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> CauseOfDeath",
				"FilterDiabetesRelated derive(country = iif(country == 'Denmark', 'DNK', iif(country == 'Norway', 'NOR', iif(country == 'Sweden', 'SWE','NA'))),",
				"          sex = iif(sex == 'Men', 'M', iif(sex == 'Women', 'F', sex))) ~> StandardizeValues",
				"RenameColumns filter(like(diagnosis_group, '%cardiovascular%') ||",
				"like(diagnosis_group, '%Diabetes%') ||",
				"like(diagnosis_group, '%kidney and ureter%') ||",
				"like(diagnosis_group, '%myocardial%')) ~> FilterDiabetesRelated",
				"CauseOfDeath select(mapColumn(",
				"          age_group = {Age group},",
				"          diagnosis_group = {Diagnosis group},",
				"          country = Country,",
				"          sex = Sex,",
				"          year = Year,",
				"          recorded_deaths = {[DEATH01] Causes of death (full list)}",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> RenameColumns",
				"StandardizeValues sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> sink1"
			]
		}
	}
}