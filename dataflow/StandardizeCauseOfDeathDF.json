{
	"name": "StandardizeCauseOfDeathDF",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "ADLS_CauseOfDeath_CSV",
						"type": "DatasetReference"
					},
					"name": "CauseOfDeath"
				}
			],
			"sinks": [],
			"transformations": [
				{
					"name": "derivedColumn1"
				},
				{
					"name": "FilterDiabetesRelated"
				},
				{
					"name": "RenameColumns"
				}
			],
			"scriptLines": [
				"source(output(",
				"          {Age group} as string,",
				"          {Diagnosis group} as string,",
				"          Country as string,",
				"          Sex as string,",
				"          Year as short,",
				"          {[DEATH01] Causes of death (full list)} as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> CauseOfDeath",
				"FilterDiabetesRelated derive({Diagnosis group} = ERROR_FUNCTION('')) ~> derivedColumn1",
				"RenameColumns filter(DiagnosisGroup == 'Subgroup:_Diabetes_mellitus_(E10-E14)'",
				") ~> FilterDiabetesRelated",
				"CauseOfDeath select(mapColumn(",
				"          AgeGroup = {Age group},",
				"          DiagnosisGroup = {Diagnosis group},",
				"          Country,",
				"          Sex,",
				"          Year,",
				"          CauseOfDeath = {[DEATH01] Causes of death (full list)}",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> RenameColumns"
			]
		}
	}
}