{
	"name": "StandardizeCauseOfDeathDF",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "ADLS_CauseOfDeath_CSV",
						"type": "DatasetReference"
					},
					"name": "CauseOfDeath"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "ADLS_STDCauseOfDeath_Parquet",
						"type": "DatasetReference"
					},
					"name": "SinkToStandardized"
				}
			],
			"transformations": [
				{
					"name": "StandardizeValues"
				},
				{
					"name": "FilterDiabetesRelated"
				},
				{
					"name": "RenameColumns"
				},
				{
					"name": "SortByCountryAndYear"
				}
			],
			"scriptLines": [
				"source(output(",
				"          {Age group} as string,",
				"          {Diagnosis group} as string,",
				"          Country as string,",
				"          Sex as string,",
				"          Year as integer,",
				"          {[DEATH01] Causes of death (full list)} as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> CauseOfDeath",
				"FilterDiabetesRelated derive(country = iif(country == 'Denmark', 'DNK', iif(country == 'Norway', 'NOR', iif(country == 'Sweden', 'SWE','NA'))),",
				"          sex = iif(sex == 'Men', 'M', iif(sex == 'Women', 'F', sex)),",
				"          diagnosis_group = iif(like(diagnosis_group, '%Diabetes%'), 'Diabetes Mellitus', \r",
				"iif(like(diagnosis_group, '%cardiovascular%'), 'Cardiovascular Disease',\r",
				"iif(like(diagnosis_group, '%kidney and ureter%'), 'Kidney and Ureter Disease',\r",
				"iif(like(diagnosis_group, '%myocardial%'), 'Heart Attack', diagnosis_group))))) ~> StandardizeValues",
				"RenameColumns filter(like(diagnosis_group, '%cardiovascular%') ||",
				"like(diagnosis_group, '%Diabetes%') ||",
				"like(diagnosis_group, '%kidney and ureter%') ||",
				"like(diagnosis_group, '%myocardial%')) ~> FilterDiabetesRelated",
				"CauseOfDeath select(mapColumn(",
				"          year = Year,",
				"          diagnosis_group = {Diagnosis group},",
				"          country = Country,",
				"          sex = Sex,",
				"          recorded_deaths = {[DEATH01] Causes of death (full list)}",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> RenameColumns",
				"StandardizeValues sort(asc(country, true),",
				"     asc(year, true)) ~> SortByCountryAndYear",
				"SortByCountryAndYear sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     format: 'parquet',",
				"     truncate: true,",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> SinkToStandardized"
			]
		}
	}
}