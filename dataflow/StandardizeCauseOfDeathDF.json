{
	"name": "StandardizeCauseOfDeathDF",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "ADLS_CauseOfDeath_CSV",
						"type": "DatasetReference"
					},
					"name": "CauseOfDeath"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "ADLS_STDCauseOfDeath_Parquet",
						"type": "DatasetReference"
					},
					"name": "SinkToStandardized"
				}
			],
			"transformations": [
				{
					"name": "StandardizeValues"
				},
				{
					"name": "FilterDiabetesRelated"
				},
				{
					"name": "RenameColumns"
				},
				{
					"name": "SortByCountryAndYear"
				},
				{
					"name": "PivotDiagnosisGroup"
				}
			],
			"scriptLines": [
				"source(output(",
				"          {Diagnosis group} as string,",
				"          Country as string,",
				"          Year as integer,",
				"          {All ages Men} as integer,",
				"          {All ages Women} as integer,",
				"          {All ages Men and Women} as integer",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> CauseOfDeath",
				"FilterDiabetesRelated derive(country = iif(country == 'Denmark', 'DNK', iif(country == 'Norway', 'NOR', iif(country == 'Sweden', 'SWE','NA'))),",
				"          diagnosis_group = iif(like(diagnosis_group, '%Diabetes%'), 'diabetes_mellitus', \r",
				"iif(like(diagnosis_group, '%cardiovascular%'), 'cardiovascular_disease',\r",
				"iif(like(diagnosis_group, '%kidney and ureter%'), 'kidney_and_ureter_disease',\r",
				"iif(like(diagnosis_group, '%myocardial%'), 'heart_attack',\r",
				"iif(like(diagnosis_group, '%ll causes%'), 'total', diagnosis_group)))))) ~> StandardizeValues",
				"RenameColumns filter(like(diagnosis_group, '%ardiovascular%') || ",
				"like(diagnosis_group, '%iabetes%') || ",
				"like(diagnosis_group, '%idney and ureter%') || ",
				"like(diagnosis_group, 'yocardial%') || ",
				"like(diagnosis_group, '%ll causes%')) ~> FilterDiabetesRelated",
				"CauseOfDeath select(mapColumn(",
				"          diagnosis_group = {Diagnosis group},",
				"          country = Country,",
				"          year = Year,",
				"          deaths = {All ages Men and Women}",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> RenameColumns",
				"PivotDiagnosisGroup sort(asc(country, true),",
				"     asc(year, true)) ~> SortByCountryAndYear",
				"StandardizeValues pivot(groupBy(country,",
				"          year),",
				"     pivotBy(diagnosis_group),",
				"     deaths_ = first(deaths),",
				"     columnNaming: '$N$V',",
				"     lateral: false) ~> PivotDiagnosisGroup",
				"SortByCountryAndYear sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     format: 'parquet',",
				"     truncate: true,",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> SinkToStandardized"
			]
		}
	}
}